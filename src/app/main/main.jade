	.section.blog-section
		.container-fluid
			.row
				.title-holder
					span.section-title FROM THE BLOG
		ul(ng-repeat='post in posts')
			.blog-post 
				.content-header
					span.post-title {{ post.title }}
					span.post-date {{ post.date.substr(0,10) }}
				.content-container
					div.post-content(ng-bind-html='post.content.substr(0,500)') 
					span.read-more-dots ... 
					a.read-more-link Read More
	.section.contact-section
		.container
			.row
				.col-lg-6.col-md-6.col-sm-12.col-sm-12
					.contact-header-container
						h1.contact-header let's
						h1.contact-header.contact-header-offset talk
				.col-lg-6.col-md-6.col-sm-12.col-sm-12
					form.contact-form(ng-submit='saveEmail()')
						.form-group
							label Name
							input(type='text', name='name', class='form-control', ng-model='contact.name', required)
						.form-group
							label Email 
							input(type='email', name='email', class='form-control', ng-model='contact.email', required)
						.form-group
							label Please briefly describe your project
							input(type='textarea', name='proj-desc', class='form-control', ng-model='contact.description', rows='10')
						.form-group
							label Price Range
							select(class='form-control', ng-model='contact.price')
								option(value='$0 - $500') $0 - $500
								option(value='$500 - $1500') $500 - $1500
								option(value='$1500 - $2500') $1500 - $2500
								option(value='$2500 - $5000') $2500 - $5000
								option(value='$5000+') $5000
						button.btn.btn-primary Submit
						





